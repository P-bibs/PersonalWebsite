{% extends "_includes/default.njk" %}

{% block content %}
  <p id="points1" hidden>{{ points.points1 }}</p>
  <p id="points2" hidden>{{ points.points2 }}</p>
  <p id="points3" hidden>{{ points.points3 }}</p>
  <p id="points4" hidden>{{ points.points4 }}</p>
  <div class="w-full min-h-screen m-0 p-0 flex flex-col justify-center items-center content-center">
    <div class="min-w-1/2 lg:w-1/2 mx-4 flex-grow flex flex-col items-center justify-center">
      <div class=" mt-6 flex flex-row justify-center items-center">
        <div class="w-16 h-16 rounded-full overflow-hidden mr-2">
          {% image "../assets/portrait.png",
          "Portrait of Paul Biberstein" %}
        </div>
        <div>Paul Biberstein</div>
      </div>
      <hr class="w-full"/>
      <div class="flex flex-row flex-wrap items-center justify-center">
        <div style="width: 300px; height: 300px" class="m-3">
          {% nodefer_shader "./index/shader.vert", "./index/shader.frag", "./index/main.js" %}
        </div>
        <div id="welcome-subtitle" class="w-1/3 flex-grow">
              I'm an undergraduate at Brown University interested in
              <a
                class="welcome-link"
              >
                programming language
              </a>
              and compiler design,
              <a
                class="welcome-link"
              >
                computer graphics
              </a>
                 and CS education. In my free time, I
              like exploring applications of CS to
              <a
                class="welcome-link"
              >
                music
              </a>, including computer music compositions and computational
              musicology.
              <br/>
              You can find more about me below, as well as some past projects and places I've worked.
            </div>
      </div>
      <hr class="w-full"/>
      <div class="flex flex-row">
        <a
          class="text-black w-6 h-6 m-3"
          href="https://github.com/p-bibs"
          target="_blank"
          rel="noopener noreferrer"
        >
          {% image "../assets/githubicon.png",
          "Paul Biberstein's Github" %}
        </a>
        <a
          class="text-black w-6 h-6 m-3"
          href="https://linkedin.com/in/paulbib/"
          target="_blank"
          rel="noopener noreferrer"
        >
          {% image "../assets/linkedinicon.png",
          "Paul Biberstein's LinkedIn" %}
        </a>
        <a
          class="text-black w-6 h-6 m-3"
          href="/PaulBibersteinResumeFall2022.pdf"
          target="_blank"
          rel="noopener noreferrer"
        >
          {% image "../assets/resumeicon.png",
          "Paul Biberstein's Resume" %}
          <a
          class="text-black w-6 h-6 m-3"
          href="https://twitter.com/paulbib"
          target="_blank"
          rel="noopener noreferrer"
        >
            {% image "../assets/twittericon.png",
            "Paul Biberstein's Twitter" %}
          </a>

        </div>
        <hr class="w-full"/>
      </div>
      <div class="w-full mb-8 text-center">
        <a
            class="block scroll-arrow"
            href="#Work-experience"
          ></a>
      </div>
    </div>
    <div class="pb-4 bg-gray-200 flex flex-col items-center">
      <h2 id="Work-experience" class="my-2 text-center">
          Work Experience
        </h2>
      <div class="w-full lg:w-2/3  space-y-4">

        {% for work in collections.work | reverse %}
          <div class="w-full px-4">
            <div class="w-full p-4 rounded shadow bg-white space-x-4 flex flex-col lg:flex-row items-center lg:items-start">
              <div class="w-36 h-36 lg:w-32 lg:h-32 relative">
                <div class="w-full h-full relative">
                  {% if "image" in work.data %}
                    <div class="h-full">
                      {% image work.data.image, work.data.company, "400vw, 100vw", "", "height: 100%; object-fit: scale-down; margin: auto" %}
                    </div>
                  {% else %}
                    <div class="w-full h-full text-center text-2xl bg-gray-400 rounded flex flex-col items-center justify-center">
                      {{ work.data.company }}
                    </div>
                  {% endif %}
                </div>
              </div>
              <div class="lg:w-px flex-grow flex flex-col">
                <div class=" flex flex-row flex-wrap items-center">
                  <h4 class="mr-2 font-bold ">{{ work.data.position }}</h4>
                  <div class="text-gray-600">{{ work.data.location }}</div>
                  <div class="text-right flex-grow">{{ work.data.during }}</div>
                </div>
                <div>
                  <h4 class="font-light">{{ work.data.company }}</h4>
                </div>
                <div>
                  {{ work.content | safe }}
                </div>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
    <div class="w-full bg-gray-300 flex flex-col items-center">
      <h2 class="my-2 text-center">Projects</h2>
      <div class="w-full lg:w-5/6 px-4 space-y-4">

        {% for project in collections.project | reverse %}
          <div class="w-full p-4 rounded shadow bg-white space-x-4 flex flex-col lg:flex-row items-center">
            <div class="w-full h-48 lg:w-4/12 lg:h-64 relative">
              <div class="w-full h-full relative">
                {% if "screen1" in project.data %}
                  <div class="w-full h-full relative">
                      {% image project.data.screen1, project.data.title, "400vw, 100vw", "project-screen", "top: 0px; left: 0px; height: 100%; object-fit: scale-down; margin: auto" %}
                      {% image project.data.screen2, project.data.title, "400vw, 100vw", "project-screen", "bottom: 0px; right: 0px; height: 100%; object-fit: scale-down; margin: auto" %}
                  </div>
                {% else %}
                  <div class="w-full h-full text-center text-2xl bg-gray-400 rounded flex flex-col items-center justify-center">
                    {{ project.data.title }}
                  </div>
                {% endif %}
              </div>
            </div>
            <div class="lg:w-px flex-grow flex flex-col">
              <div class=" flex flex-row flex-wrap items-center">
                  <h2 class="my-2 mr-2">{{ project.data.title }}</h2>
                <div class="h-full space-x-2 flex flex-row flex-wrap justify-center">
                  {% for interaction in project.data.interactions %}

                    <span
              class="px-3 py-1 rounded-full font-semibold text-sm text-gray-700 bg-gray-200 hover:bg-gray-400 cursor-pointer"
            >
                      <a
                class="no-underline"
                rel="noreferrer"
                target="_blank"
                href="{{ interaction.href }}"
              >
                        {% if interaction.type == "GITHUB" %}
                  Github
              {% elif interaction.type == "DEMO" %}
                  See it live
              {% elif interaction.type == "DOCUMENTATION" %}
                  Documentation
              {% elif interaction.type == "PYPI" %}
                  Install from PYPI
              {% else %}
                  UNKNOWN
              {% endif %}
                      </a>
                    </span>
                  {% endfor %}
                </div>
              </div>
              <div>
                <h3 class="my-2 font-light">{{ project.data.short }}</h3>
              </div>
              <div>
                {{ project.content | safe }}
                <div class="mt-2">
                  <strong>Relevant Topics: </strong>
                  <span class="font-light">{{ project.data.relevantTopics }}</span>
                </div>
              </div>
            </div>
          </div>
        {% endfor %}
        </div>
      </div>
    </div>
  {% endblock %}
