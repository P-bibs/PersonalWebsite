{% extends "_includes/default.njk" %}

{% block content %}
  {# <div class="fixed inset-0 flex justify-center items-center"> #}
  <main class="" style="width: 100vw, height: 100vh">
    <div class="mx-auto w-1/2 py-5 space-y-3">
      <div class="h-64 flex flex-row items-center space-x-3">
        <div class="window-no-p h-full bg-amber-100 p-0">
          <img class="w-auto h-64" src="https://paulbiberstein.me/_next/static/images/portrait-6fbca57aa656ca168ad4743cd6e4d443.jpg"/>
        </div>
        <div class="window h-full w-0 bg-teal-100 flex-grow">
          <h2 class="window-header">About Me</h2>
          <article class="homepage-block">
            {% block about_me %}{% endblock %}
          </article>
        </div>
      </div>
      <div class="window bg-lime-100">
        <h2 class="window-header">Past</h2>
        <article class="homepage-block">
          {% block past %}{% endblock %}
        </article>
      </div>
      <div class="window bg-purple-100">
        <h2 class="window-header">Projects</h2>
        <article class="homepage-block">
          {% block projects %}{% endblock %}
        </article>
      </div>
      <div class="window bg-orange-100">
        <h2 class="window-header">Research</h2>
        <article class="homepage-block">
          {% block research %}{% endblock %}
        </article>
      </div>
    </div>
  </main>
{% endblock %}
